<%= form_with model: character, html: { class: "character form" } do |form| %>

  <%= render partial: 'errors', locals: { character: character } %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :gender_identity %>
    <%= form.text_field :gender_identity %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.date_field  :date_of_birth %>
  </div>

  <div class="field">
    <%= form.label :profession_id %>
    <%= form.collection_select :profession_id, Profession.order(:name), :id, :name, {include_blank: 'Select a profession'} %>
  </div>

  <%= form.submit submit_text, class: "button is-rounded is-primary" %>
<% end %>
